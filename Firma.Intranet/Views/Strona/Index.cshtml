@model IEnumerable<Firma.Data.Data.Cms.Strona>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create">Dodaj nową strone</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LinkTytul)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tytuł)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tresc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pozycja)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LinkTytul)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tytuł)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tresc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pozycja)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdStrony">Edytuj</a> |
                <a asp-action="Details" asp-route-id="@item.IdStrony">szczegóły</a> |
                <a asp-action="Delete" asp-route-id="@item.IdStrony">usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
